<link rel="stylesheet" href="pra_jq01.css" media="all">
<script src="https://cdnjs.cloudflare.com/ajax/libs/push.js/1.0.12/push.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script>
$(function(){
	alert('遊び方：勝利のボタンを探しオワタを止めましょう（スタートボタンが消えても負けです。）');	
	$('.button1').mouseover(function(){
		$(this).hide(2000,function(){});	
	});

	$('button').on('click.button1',function(){
		$('.box1').animate({width:450},500).animate({height:450},500).animate({width:300},500).animate({height:300},500).animate({width:450},500).animate({height:450},500).animate({width:300},500).animate({height:300},500).animate({width:450},500).animate({height:450},500).animate({width:300},500).animate({height:300},500).animate({width:450},500).animate({height:450},500).animate({width:300},500).animate({height:300},500).animate({width:450},500).animate({height:450},500).animate({width:300},500).animate({height:300},500);
		$('.box2').animate({'top':'600','left':'100'},3000).animate({'top':'0','left':'40'},2000).animate({'top':'400'},1000).animate({'top':'0'},500).animate({'top':'400','left':'300'},1500).animate({'top':'100','left':'500','right':'270'},2000);
		$('.box3').animate({'top':'20'},3000).fadeOut(200).fadeIn(200).fadeOut(200).fadeIn(200).fadeOut(200).fadeIn(200).fadeOut(200).fadeIn(200).fadeOut(200).fadeIn(200).fadeOut(200).fadeIn(200);
		$('.button2').css('display','block');
		$.when(
			$('.box4').animate({height:2000},5000),
			$('.box4').animate({width:3000},5000)
		).done(function(){
			alert('ゲームオーバー：オワタに征服されました。')
		});
	});
		
	$('.button2').on('click',function(){
		$('.button1').off('click');
		alert('大当たり〜〜〜あなたの勝ちです。');
	});

});
</script>
</head>
